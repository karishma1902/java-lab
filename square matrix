class Matrix{
    public static void main(String[] args) {

        System.out.println("Enter the size of the square matrix");
        Scanner sc = new Scanner(System.in);
        int num = sc.nextInt();
        if(num<=0)
        {
            System.out.println("Invalid");
        }
        else
        {
            int sum=0;
            while(num!=0)
            {
                sum+=num*num;
                num--;
            }
            System.out.println("No. of square matrices: "+sum);
        }
        
    }
}
